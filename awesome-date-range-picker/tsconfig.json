{
  "compilerOptions": {
    "outDir": "./dist",      
    "rootDir": "./src",   
    "target": "es5",   
    "module": "commonjs",   
    "jsx": "react", 
    "strict": true, 
    "esModuleInterop": true,
    "skipLibCheck": true,   
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],  
  "exclude": ["node_modules", "dist"]  
}
